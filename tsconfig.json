{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@assets/*": ["./assets/*"],
      "@common/*": ["./src/components/common/*"]
    }
  },

  "exclude": ["node_modules", "build"],
  "include": ["./types/index.d.ts"]
}
